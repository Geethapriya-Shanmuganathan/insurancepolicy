@model IEnumerable<InsurancePolicyMS.Models.Claim>
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "My Claims";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">My Claims</h4>
        <a class="btn btn-outline-primary" asp-controller="UserClaims" asp-action="Submit">Submit Claim</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-secondary">You have no claims.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-sm table-bordered align-middle">
                <thead class="table-light">
                    <tr><th>Claim Id</th><th>Policy</th><th>Amount</th><th>Status</th><th>Submitted</th><th>Settlement</th></tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td>@c.ClaimId</td>
                            <td>@(c.Policy?.PolicyType ?? c.PolicyId.ToString())</td>
                            <td>@c.ClaimAmount.ToString("N0")</td>
                            <td>@c.ClaimStatus</td>
                            <td>@c.SubmissionDate.ToString("yyyy-MM-dd")</td>
                            <td>@(c.SettlementDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
