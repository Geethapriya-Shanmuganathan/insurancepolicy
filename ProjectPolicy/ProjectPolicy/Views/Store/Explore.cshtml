@model IEnumerable<InsurancePolicyMS.Models.Policy>
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Explore Policies";
    var purchased = (ViewBag.PurchasedIds as System.Collections.Generic.HashSet<int>) ?? new System.Collections.Generic.HashSet<int>();
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">Explore Policies</h4>
        <a class="btn btn-outline-secondary" asp-controller="Store" asp-action="MyPolicies">My Policies</a>
    </div>

    <div class="row g-3">
        @foreach (var p in Model)
        {
            <div class="col-md-6 col-xl-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <h5 class="card-title">@p.PolicyType</h5>
                            @if (purchased.Contains(p.PolicyId))
                            {
                                <span class="badge bg-success">Purchased</span>
                            }
                        </div>
                        <div class="text-muted small">Coverage: @p.CoverageAmount.ToString("N0")</div>
                        <div class="text-muted small mb-2">Premium: @p.PremiumAmount.ToString("N0")</div>
                        <div class="small mb-2">Validity: @p.ValidityStartDate.ToString("yyyy-MM-dd") - @p.ValidityEndDate.ToString("yyyy-MM-dd")</div>
                        @if (!purchased.Contains(p.PolicyId))
                        {
                            <form method="post" asp-controller="Store" asp-action="Buy">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="policyId" value="@p.PolicyId" />
                                <button type="submit" class="btn btn-primary btn-sm">Buy</button>
                                <a class="btn btn-outline-secondary btn-sm" asp-controller="Home" asp-action="PolicyDetails" asp-route-policyType="@p.PolicyType">Details</a>
                            </form>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
