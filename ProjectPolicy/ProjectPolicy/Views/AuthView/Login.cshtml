@{
    ViewBag.Title = "Login";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/js/bootstrap.min.js"></script>

<!-- Login Modal -->
<div class="modal show d-block" tabindex="-1">
    <div class="modal-dialog" id="modalDialog" style="cursor: move;">
        <div class="modal-content">
            <form id="loginForm">
                <div class="modal-header bg-primary text-white" style="cursor: move;">
                    <h5 class="modal-title">Login</h5>
                </div>
                <div class="modal-body">
                    <div id="loginMessage" class="text-danger"></div>
                    <div class="form-group">
                        <label>Username</label>
                        <input name="username" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" name="password" class="form-control" required />
                    </div>
                    <p>Don't have an account? </p>
                    <a href="@Url.Action("Register", "AuthView")">Go to Register</a>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Register Modal (hidden initially) -->
<div id="registerModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="registerContent"></div>
    </div>
</div>

<script>
    $(document).ready(function() {

        // Login AJAX form submit
        $('#loginForm').submit(function(e) {
            e.preventDefault();

            var data = {
                username: $("input[name='username']").val(),
                password: $("input[name='password']").val()
            };

            $.ajax({
                url: '/api/Auth/login',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function(res) {
                    sessionStorage.setItem('jwt', res.token);
                    alert('Login successful');
                    window.location.href = '/'; // Redirect after login
                },
                error: function(xhr) {
                    var errorMsg = "Login failed.";
                    if (xhr.responseJSON && xhr.responseJSON.message)
                        errorMsg = xhr.responseJSON.message;
                    $('#loginMessage').text(errorMsg);
                }
            });
        });

        // Show register modal on clicking register link
        $('#showRegister').click(function(e) {
            e.preventDefault();

            // Load register form partial view via ajax
            $.get('/AuthView/Register', function(data) {
                $('#registerContent').html(data);
                $('.modal').modal('hide');  // Hide any open modal
                $('#registerModal').modal('show');
            }).fail(function() {
                alert('Failed to load registration form.');
            });
        });
    });
</script>
