@{
    Layout = null;
    ViewData["Title"] = "Register";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .full-bg {
        background: linear-gradient(rgba(0,0,0,.35), rgba(0,0,0,.35)), url('/images/insuranceregister.jpg') center/cover no-repeat fixed;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
    }

    .password-wrapper {
        position: relative;
    }

        .password-wrapper input.form-control {
            padding-right: 2.5rem; /* space for the icon */
        }

        .password-wrapper .toggle-password {
            position: absolute;
            right: .6rem;
            top: 50%;
            transform: translateY(-50%);
            border: none;
            background: transparent;
            padding: 0;
            color: #6c757d;
            cursor: pointer;
        }

            .password-wrapper .toggle-password:focus {
                outline: none;
            }

    .auth-card {
        max-width: 520px;
        width: 100%;
        background: rgba(255,255,255,0.92);
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        padding: 1.5rem;
    }

    #registerMessage {
        min-height: 1.2rem;
    }

    .two-col {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: .75rem;
    }
</style>

<div class="full-bg">
    <div class="auth-card">
        <h3 class="mb-3">Create your account</h3>
        <div id="registerMessage" class="text-danger"></div>
        <form id="registerForm">
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input name="username" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" name="email" class="form-control" required />
            </div>
            <div class="two-col">
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <div class="input-group">
                        <input type="password" name="password" id="regPassword" class="form-control" required />
                        <button type="button" class="btn btn-outline-secondary toggle-password" data-target="#regPassword" aria-label="Show password">
                            <i class="bi bi-eye"></i>
                        </button>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Confirm Password</label>
                    <div class="input-group">
                        <input type="password" name="confirmPassword" id="regConfirmPassword" class="form-control" required />
                        <button type="button" class="btn btn-outline-secondary toggle-password" data-target="#regConfirmPassword" aria-label="Show password">
                            <i class="bi bi-eye"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-success">Register</button>
            </div>
        </form>
        <div class="mt-3">
            Already have an account? <a href="@Url.Action("Login", "AuthView")">Login</a>
        </div>
    </div>
</div>

<!-- Success Modal -->
<div class="modal fade" id="successModal" tabindex="-1" aria-hidden="true" aria-labelledby="successModalLabel">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="successModalLabel">Registration successful</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Your account has been created. Redirecting to login...
            </div>
            <div class="modal-footer">
                <button type="button" id="goToLoginBtn" class="btn btn-success">Go to Login</button>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    $(function(){
      var $form = $('#registerForm');
      var $msg = $('#registerMessage');
      var loginUrl = '@Url.Action("Login", "AuthView")';
      var redirectTimer;

      function redirectToLogin() {
        window.location.href = loginUrl;
      }

      $('#goToLoginBtn').on('click', redirectToLogin);
      $('#successModal').on('hidden.bs.modal', redirectToLogin);

      $form.on('submit', function(e){
        e.preventDefault();
        $msg.text('');

        var data = {
          username: $form.find('input[name="username"]').val(),
          email: $form.find('input[name="email"]').val(),
          password: $form.find('input[name="password"]').val(),
          confirmPassword: $form.find('input[name="confirmPassword"]').val()
        };

        if (data.password !== data.confirmPassword) {
          $msg.text('Passwords do not match.');
          return;
        }

        $.ajax({
          url: '/api/Auth/register',
          method: 'POST',
          contentType: 'application/json',
          data: JSON.stringify(data),
          success: function(){
            var modal = new bootstrap.Modal(document.getElementById('successModal'));
            modal.show();
            redirectTimer = setTimeout(redirectToLogin, 1800);
          },
          error: function(xhr){
            if (redirectTimer) { clearTimeout(redirectTimer); }
            var msg = 'Registration failed.';
            if (xhr.responseJSON && xhr.responseJSON.message) { msg = xhr.responseJSON.message; }
            $msg.text(msg);
          }
        });
      });
    });

    $(function () {
      $(document).on('click', '.toggle-password', function () {
        var target = $(this).data('target');
        var $input = $(target);
        var $icon = $(this).find('i');
        var isPassword = $input.attr('type') === 'password';
        $input.attr('type', isPassword ? 'text' : 'password');
        $icon.toggleClass('bi-eye bi-eye-slash');
      });
    });
</script>