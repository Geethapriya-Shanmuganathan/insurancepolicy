@{
    ViewData["Title"] = "Register";
}

<style>
    .full-bg {
        background: linear-gradient(rgba(0,0,0,.35), rgba(0,0,0,.35)), url('/images/background.jpg') center/cover no-repeat fixed;
        min-height: calc(100vh - 120px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
    }
    .auth-card {
        max-width: 520px;
        width: 100%;
        background: rgba(255,255,255,0.92);
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        padding: 1.5rem;
    }
    .auth-title { margin-bottom: 1rem; }
    #registerMessage { min-height: 1.2rem; }
    .two-col { display: grid; grid-template-columns: 1fr 1fr; gap: .75rem; }
</style>

<div class="full-bg">
    <div class="auth-card">
        <h3 class="auth-title">Create your account</h3>
        <div id="registerMessage" class="text-danger"></div>
        <form id="registerForm">
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input name="username" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" name="email" class="form-control" required />
            </div>
            <div class="two-col">
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" name="password" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Confirm Password</label>
                    <input type="password" name="confirmPassword" class="form-control" required />
                </div>
            </div>
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-success">Register</button>
            </div>
        </form>
        <div class="mt-3">
            Already have an account? <a href="@Url.Action("Login", "AuthView")">Login</a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function(){
            var $form = $('#registerForm');
            var $msg = $('#registerMessage');
            $form.on('submit', function(e){
                e.preventDefault();
                $msg.text('');
                var data = {
                    username: $form.find('input[name="username"]').val(),
                    email: $form.find('input[name="email"]').val(),
                    password: $form.find('input[name="password"]').val(),
                    confirmPassword: $form.find('input[name="confirmPassword"]').val()
                };
                if(data.password !== data.confirmPassword){
                    $msg.text('Passwords do not match.');
                    return;
                }
                $.ajax({
                    url: '/api/Auth/register',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(data),
                    success: function(){
                        window.location.href = '@Url.Action("Login","AuthView")';
                    },
                    error: function(xhr){
                        var msg = 'Registration failed.';
                        if(xhr.responseJSON && xhr.responseJSON.message){ msg = xhr.responseJSON.message; }
                        $msg.text(msg);
                    }
                });
            });
        });
    </script>
}